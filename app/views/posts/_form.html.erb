<%= form_for(@post) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    Choose Category:<br>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br>
    <br>
    Create New Category:<br>
    <%= f.fields_for :categories, @post.categories.build do |c| %>
        <%= c.label :name %><br>
        <%= c.text_field :name %><br>
    <% end %>
    <%= f.submit %>
<% end %>
