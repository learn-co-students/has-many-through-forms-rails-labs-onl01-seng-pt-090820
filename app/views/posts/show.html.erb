
<h1> THE POST SHOW </h1>

<h3> Title: </h3>
<h2><%= @post.title %></h2>

<h3> Category: </h3>
<% @post.post_categories.each do |post_category| %>
  <%= post_category.category.name %>
  <% end %>

<h3> Content: </h3>
<%= @post.content %>

<h3> Comment: </h3>

  <% @post.comments.each do |comment| %>
    <%= comment.user_id %> says: <%= comment.content %><br>
  <% end %>

<h3> Users: </h3>
<% @post.users.each do |user| %>
  <%= user.username %><br>
  <% end %>



  <h1> NEW Comment </h1>
      <%= form_for @comment do |f| %>
        <%= f.collection_select(:user_id, User.all, :id, :username, prompt: true) %><br>
        <%= f.fields_for :user, User.new do |user_fields| %>
          <%= user_fields.label :username %>
          <%= user_fields.text_field :username %>
        <% end %>
        <%= f.label :content %>
        <%= f.text_field :content %><br>
        <%= f.label :user %>
        <%= f.fields_for :categories, @post.comments.build do |comments_fields| %><br>
          <%= comments_fields.text_field :user_id %><br>
          <% end %>
        <%= f.hidden_field :post_id, value: @post.id %>
      <%= f.submit %>
    <% end %>









